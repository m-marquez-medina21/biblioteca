<form class="form-inline">
        <select name="status">
                <option value="0"> prestado</option>
                <option value="1"> estante</option>
            </select>
        <button class="submit">Search</button>
</form>


<p id="notice"><%= notice %></p>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha de prestamo</th>
        <th>fecha de devolucion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr> 
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.status %></td>
          <td><%= book.lend_date %></td>
          <td><%= book.return_date %></td>
      
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'crear nueva reserva', books_new_path, class: 'btn btn-success' %>
</div>